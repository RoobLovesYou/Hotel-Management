@model Booking
@{
    ViewData["Title"] = "Modify Booking Details";
}
<h1 class="m-2">@ViewData["Title"]</h1>

<a asp-action="BookingHome" class="btn btn-outline-secondary m-2">Return to Bookings</a>

<form method="post">
    <div class="form-group m-2">
        <label asp-for="bookingId" class="form-label">Booking Id:</label>
        <input asp-for="bookingId" readonly class="form-control" />
    </div>

    <div class="form-group m-2">
        <label asp-for="BookingDateFrom" class="form-label">Booking Date From:</label>
        <input asp-for="BookingDateFrom" class="form-control" />
    </div>

    <div class="form-group m-2">
        <label asp-for="BookingDateTo" class="form-label">Booking Date To:</label>
        <input asp-for="BookingDateTo" class="form-control" />
    </div>

    <div class="form-group m-2">
        <label asp-for="Deposit" class="form-label">Deposit:</label>
        <input asp-for="Deposit" class="form-control" />
    </div>

     <div class="form-group m-2">
        <label asp-for="Status" class="form-label">Status:</label>
        <select asp-for="Status" class="m-2">
            <option value="">Choose an Option</option>
            <option value="true">Confirmed</option>
            <option value="false">Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-info m-2" style="color:white"><i class="fa fa-pencil" title="Edit"></i> UPDATE BOOKING</button>
</form>